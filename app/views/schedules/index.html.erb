<p id="notice"><%= notice %></p>

<h1>Listing Schedules</h1>

<table>
  <thead>
    <tr>
      <th>Start</th>
      <th>Frequency</th>
      <th>Title</th>
      <th>Recipients</th>
      <th>Last sent</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.start %></td>
        <td><%= schedule.frequency %></td>
        <td><%= schedule.title %></td>
        <td><%= schedule.recipients %></td>
        <td><%= schedule.last_sent %></td>
        <td><%= link_to 'Show', schedule %></td>
        <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
        <td><%= link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

