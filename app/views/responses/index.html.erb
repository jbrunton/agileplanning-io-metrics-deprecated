<% breadcrumb :responses, @survey %>

<h1>Survey Responses</h1>

<table class="responses">
  <thead>
    <tr>
      <th>Question</th>
      <th colspan="2">Average</th>
      <th colspan="<%= @survey.responses.length %>">
        Individual Responses
      </th>
    </tr>
  </thead>

  <tbody>
    <% @survey_report.questions.each do |question| %>
        <tr>
          <td><%= question.title %></td>
          <% rating = @survey_report.aggregate_rating_for(question) %>
          <td>
            <% unless rating.nil? %>
                <img src=<%= "/moods/#{Answer.categorize(rating)}.png" %>/>
            <% end %>
          </td>
          <td>
            <% unless rating.nil? %>
                <span><%= sprintf('%.2f', rating) %></span>
            <% end %>
          </td>
          <% @survey_report.answers_for(question).each do |answer| %>
              <% unless answer.nil? %>
                  <td><img src=<%= "/moods/#{answer.answer}.png" %>/></td>
              <% end %>
          <% end %>
        </tr>
    <% end %>
  </tbody>
</table>
